{
    "name": "Email Writer Assistant",
    "description": "Ai - powered reply",
    "version": "1.0",
    "manifest_version": 3,
    "permissions":["activeTab", "storage"],
    "host_permissions": [
        "http://localhost:8080/*",
        "https://mail.google.com/*"
    ],
    "content_scripts": [
    {
        "matches": ["https://mail.google.com/*"],
        "css": ["content.css"],
        "js": ["content.js"],
        "run_at" : "document_end"
    }
    ],
    "web_accessible_resources": [
    {
        "resources": [ "/icons/*" ],
        "matches": [ "https://mail.google.com/*" ]
    }
    ],
    "action": {
      "default_title": "Email Writer Assistant"
    }
  }